{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle équipe{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-4">Ajouter une nouvelle équipe</h2>
        {% for message in app.flashes('erreurUnique') %}
            <!-- Error message -->
            <div class="alert alert-danger">
                <img src="{{ asset('img/error.png') }}" class="errorImage"> {{ message }}
            </div>
        {% endfor %}
        <div class="w-50 mx-auto" id="newTeamDivID">
            <!-- New team form -->
            {{ include('teams/_form.html.twig') }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <!-- Imports the JS script of the teams section -->
    <script src="{{ asset('js/teams.js') }}"></script>
{% endblock %}