{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
<!-- The input for the team name -->
<div class="form-outline mb-2">
    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.libelle, null, {
        'label': "Nom de l'équipe",
        'label_attr': {'class': 'form-label'}
    }) }}
</div>
<!-- The input for the coach -->
<div class="form-outline mb-2">
    {{ form_widget(form.entraineur, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.entraineur, null, {
        'label': 'Entraîneur',
        'label_attr': {'class': 'form-label'}
    }) }}
</div>
<!-- The input for the training session -->
<div class="form-outline mb-2">
    {{ form_widget(form.creneaux, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.creneaux, null, {
        'label': 'Créneaux',
        'label_attr': {'class': 'form-label'}
    }) }}
</div>
<!-- The group of inputs for the team photo -->
<div class="form-outline mb-2">
    <input type="text" name="url_photoInfo" class="form-control disabledInput" disabled>
    {{ form_label(form.url_photo, null, {
        'label': 'URL de la photo',
        'label_attr': {'class': 'form-label'}
    }) }}
    {{ form_widget(form.url_photo, {'attr': {'type': 'hidden', 'style': 'display: none;'}}) }}
    <input type="file" name="uploadUrl_photo" accept="image/png, image/jpeg" class="form-control" onchange="newUrlPhoto()"/>
</div>
<!-- The group of inputs for the team photo -->
<div class="form-outline mb-2">
    {{ form_widget(form.url_result_calendrier, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.url_result_calendrier, null, {
        'label': 'URL des résultats',
        'label_attr': {'class': 'form-label'}
    }) }}
</div>
<!-- The group of inputs for the team photo -->
<div class="form-outline">
    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.commentaire, null, {
        'label': 'Commentaire',
        'label_attr': {'class': 'form-label'}
    }) }}
</div>
<div class="d-flex justify-content-evenly">
    <!-- The button to add the team -->
    <button type="submit" class="btn btn-success mt-3"><i class="fa-solid fa-plus"></i> Ajouter la nouvelle équipe</button>
    <!-- The button to go back to the manage teams page -->
    <button type="button" class="btn btn-secondary  mt-3" onclick="location.href='{{ path('manageTeamsPage') }}'"><i class="bi bi-arrow-90deg-left"></i> Retour à la liste des équipes</button>
</div>
{{ form_end(form) }}
